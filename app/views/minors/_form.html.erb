<%= form_for @minor, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :first_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :first_name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :last_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :last_name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :ssn, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :ssn, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :dob, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :dob, :class => 'text_field' %>
    </div>
  </div>
  
  <div class="control-group">
    <%= f.label :grade, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :grade, :class => 'text_field' %>
    </div>
  </div>

  <!-- <div class="control-group">
    <! %= f.label :age, :class => 'control-label' %> -->
    <!--<div class="controls">
      %= f.text_field :age, readonly: true, type: "hidden", :class => 'text_field' %>
    </div>
  </div> -->
  <div class="form-actions">
    <%= f.submit "Submit", :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                minors_path, :class => 'btn' %>
  </div>
<% end %>
