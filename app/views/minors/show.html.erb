<%- model_class = Minor -%>
<div class="span8 offset3">
<div class="page-header">
  <!-- <h1>%=t '.title', :default => model_class.model_name.human.titleize %></h1> -->
  <h1><%= current_minor.first_name.titleize %>'s Profile</h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:first_name) %>:</strong></dt>
  <dd><%= @minor.first_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:last_name) %>:</strong></dt>
  <dd><%= @minor.last_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:ssn) %>:</strong></dt>
  <dd><%= @minor.ssn %></dd>
  <dt><strong><%= model_class.human_attribute_name(:dob) %>:</strong></dt>
  <dd><%= @minor.dob %></dd>
  <dt><strong><%= model_class.human_attribute_name(:age) %>:</strong></dt>
  <dd><%= @minor.age %></dd>
  <dt><strong><%= model_class.human_attribute_name(:grade) %>:</strong></dt>
  <dd><%= @minor.grade %></dd>
</dl>

<div class="form-actions center_it">
  <!-- %= link_to t('.back', :default => t("helpers.links.back")),
              minors_path, :class => 'btn'  %> -->
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_minor_path(@minor), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              minor_path(@minor),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

<p id="notice"><%= notice %></p>

<p>
  <strong>Firstname:</strong>
  <%= @minor.first_name %>
</p>

<p>
  <strong>Lastname:</strong>
  <%= @minor.last_name %>
</p>

<p>
  <strong>Ssn:</strong>
  <%= @minor.ssn %>
</p>

<p>
  <strong>Dob:</strong>
  <%= @minor.dob %>
</p>

<p>
  <strong>Age:</strong>
  <%= @minor.age %>
</p>

<p>
  <strong>Grade:</strong>
  <%= @minor.grade %>
</p>

<%= link_to 'Edit', edit_user_minor_path(current_user.id, @minor.id) %> |
<%= link_to 'Back', user_minors_path %>


