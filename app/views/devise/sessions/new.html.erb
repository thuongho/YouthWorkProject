<div class="page-header">
<h2>Sign in</h2>
</div>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'form-horizontal'}) do |f| %>
  <div class="control-group">
  <%= f.label :email, :class => 'control-label'  %>
  <div class="controls">
  <%= f.email_field :email, autofocus: true, :class => 'control-label' %>
  </div>
  </div>

  <div class="control-group">
  <%= f.label :password, :class => 'control-label'  %>
  <div class="controls">
    <%= f.password_field :password, autocomplete: "off", :class => 'control-label' %>
  </div>
    </div>

  <% if devise_mapping.rememberable? -%>
    <div class="control-group">

    <div class="controls">
    <%= f.check_box :remember_me, :class => 'control-label'  %> <br>
    <%= f.label :remember_me %></div>
    </div>
  <% end -%>

  <div class="form-actions"><%= f.submit "Sign in", class: 'btn btn-primary' %></div>
<% end %>

<%= render "devise/shared/links" %>
