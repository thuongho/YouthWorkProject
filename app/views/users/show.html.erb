<%- model_class = User -%>
<div class="span8 offset2">
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>


<%= render 'accordion' %>



<div class="form-actions center-it">
<%= link_to "Camera", camera_path, class: 'btn btn-success' %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_user_path(@user), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              user_path(@user),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
<%= link_to 'Fill Out Form', new_user_minor_path(current_user.id), class: 'btn btn-warning btn-block' %>
<%= link_to 'Add Employer', new_employer_path, class: 'btn btn-warning btn-block' %>

<%= link_to 'Add School', new_school_path, class: 'btn btn-warning btn-block' %>
</div>